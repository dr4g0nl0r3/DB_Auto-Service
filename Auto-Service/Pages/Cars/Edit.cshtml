@page
@model Auto_Service.Pages.Cars.EditModel
@{
}

<br>
<h2>Редактирование автомобиля</h2>

@if (Model.errorMessage.Length > 0)
{
				<div class='alert alert-warning alert-dismissible fade show' role='alert'>
					<strong>@Model.errorMessage</strong>
					<button type='button' class='btn-close' data-ds-dismiss='alert' aria-label="Close"></button>
				</div>
}

<form method="POST">
	<input type="hidden" name="id" value="@Model.carInfo.id">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Автомобиль</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="name" value="@Model.carInfo.name">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Гос.номер авто</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="carnum" value="@Model.carInfo.carnum">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Телефон клиента</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="clphone" value="@Model.carInfo.clphone">
		</div>
	</div>

	@if (Model.successMessage.Length > 0)
	{
					<div class="row mb-3">
						<div class="col-sm-9">
							<div class='alert alert-success alert-dismissible fade show' role='alert'>
								<strong>@Model.successMessage</strong>
								<button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
							</div>
						</div>
					</div>
	}

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Сохранить</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/Cars/Cars" role="button">Скрыть</a>
		</div>
	</div>
</form>
